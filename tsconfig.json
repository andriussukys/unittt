{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES6"],
        "module": "CommonJS",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "outDir": "lib",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ES6",
        "types": ["node"]
    },
    "include": ["src"]
}
